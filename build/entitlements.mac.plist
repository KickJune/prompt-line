<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for AppleScript automation to check accessibility permissions and activate applications -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Required for accessing System Events and UI element information -->
    <key>com.apple.security.system-events</key>
    <true/>
    
    <!-- Required for accessibility API access to detect focused UI elements -->
    <key>com.apple.security.accessibility</key>
    <true/>
    
    <!-- May be required for Electron's internal workings - remove if app works without it -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>